<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="description" content="Login and Signup page for SafeGuardHub. Securely manage your account.">
  <meta name="author" content="Your Name">
  <title><%= title %></title>
  <link rel="stylesheet" href="css/auth.css">
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/5.0.0-alpha1/css/bootstrap.min.css" integrity="sha384-r4NyP46KrjDleawBgD5tp8Y7UzmLA05oM1iAEQ17CSuDqnUK2+k9luXQOfXJCJ4I" crossorigin="anonymous">
  <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/5.0.0-alpha1/js/bootstrap.min.js" integrity="sha384-oesi62hOLfzrys4LxRF63OJCXdXDipiYWBnvTl9Y9/TRlw5xlKIEHpNyvvDShgf/" crossorigin="anonymous"></script>
</head>
<body>
<div class="auth-container">
    <div class="login-contain">
        <img src="img/signup.png" alt="Signup" class="signupimg">
        <div class="login-section">
            <h2>Login</h2>
            <form action="/login" method="post">
                <table>
                    <tr>
                        <td><label for="login-email">Email :</label></td>
                        <td><input type="email" id="login-email" name="email" required></td>
                    </tr>
                    <tr>
                        <td><label for="login-password">Password :</label></td>
                        <td><input type="password" id="login-password" name="password" required></td>
                    </tr>
                    <tr>
                        <td><button type="submit">Login</button></td>
                    </tr>
                </table>
                <p>Don't have an account? <button type="button" id="signupbtn">Signup</button></p>
            </form>
        </div>
    </div>
    <div class="signup-contain">
        <img src="img/login.png" alt="Login" width="480px" class="loginimg">
        <div class="signup-section">
            <h2>Signup</h2>
            <form action="/signup" method="post">
                <table>
                    <tr>
                        <td><label for="signup-name">Name :</label></td>
                        <td><input type="text" id="signup-name" name="name" required></td>
                    </tr>
                    <tr>
                        <td><label for="signup-age">Age :</label></td>
                        <td><input type="number" id="signup-age" name="age" required></td>
                    </tr>
                    <tr>
                        <td><label for="signup-email">Email :</label></td>
                        <td><input type="email" id="signup-email" name="email" required></td>
                    </tr>
                    <tr>
                        <td><label for="signup-password">Password :</label></td>
                        <td><input type="password" id="signup-password" name="password" required></td>
                    </tr>
                    <tr>
                        <td><button type="submit">Signup</button></td>
                    </tr>
                </table>
                <p>Already have an account? <button type="button" id="loginbtn">Login</button></p>
            </form>
        </div>
    </div>
</div>

<script>
document.addEventListener("DOMContentLoaded", () => {
    const signupbtn = document.querySelector('#signupbtn');
    const loginbtn = document.querySelector('#loginbtn');
    const loginimg = document.querySelector('.loginimg');
    const signupimg = document.querySelector('.signupimg');
    const signupsection = document.querySelector('.signup-section');
    const loginsection = document.querySelector('.login-section');

    function showSignup() {
        signupimg.style.display = 'block';
        loginsection.style.display = 'none';
        signupsection.style.display = 'block';
        loginimg.style.display = 'none';
    }

    function showLogin() {
        signupimg.style.display = 'none';
        signupsection.style.display = 'none';
        loginimg.style.display = 'block';
        loginsection.style.display = 'block';
    }

    signupbtn.addEventListener('click', showSignup);
    loginbtn.addEventListener('click', showLogin);
});
</script>
</body>
</html>
